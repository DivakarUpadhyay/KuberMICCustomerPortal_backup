@page
@model DetailsModel
@{
    Dictionary<string, string> HtmlTagData = new Dictionary<string, string>(){};
    ViewBag.HtmlTagData = HtmlTagData;

    List<string> PageStyles = new List<string>(){};
    ViewBag.PageStyles = PageStyles;

    List<string> VendorScripts = new List<string>(){};
    ViewBag.VendorScripts = VendorScripts;

    List<string> PageScripts = new List<string>(){};
    ViewBag.PageScripts = PageScripts;

    Dictionary<string, string> Breadcrumbs = new Dictionary<string, string>(){
        {"/dashboard","Home"},
        {"/identity/users","Users"},
        {"/identity/users/manage/details","User Details"}
    };
    ViewBag.Breadcrumbs = Breadcrumbs; 

    ViewData["Title"] = "User Details";
    ViewBag.Description = "List users";
}

<div>
    <h4>@ViewData["Title"]</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DetailsUser.Username)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DetailsUser.Username)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DetailsUser.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DetailsUser.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DetailsUser.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DetailsUser.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DetailsUser.ClaimList)
        </dt>
        <dd>
            @for (var i = 0; i < Model.DetailsUser.ClaimList.Count(); i++)
            {
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="@Model.DetailsUser.ClaimList[i].id">@Model.DetailsUser.ClaimList[i].claimName</label>
                        <input type="hidden" asp-for="@Model.DetailsUser.ClaimList[i].id" />
                        <input type="hidden" asp-for="@Model.DetailsUser.ClaimList[i].claimName" />
                    </div>
                </div>

            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DetailsUser.CompanyName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DetailsUser.CompanyName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DetailsUser.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DetailsUser.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DetailsUser.PhoneNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DetailsUser.PhoneNumber)
        </dd>
    </dl>
</div>
<div>
    <dl class="dl-horizontal">
        <dd>
            <a asp-page="./edit" asp-route-id="@Model.DetailsUser.UserId">Edit</a> |
            <a asp-page="../index">Back to List</a>
        </dd>
    </dl>
</div>
