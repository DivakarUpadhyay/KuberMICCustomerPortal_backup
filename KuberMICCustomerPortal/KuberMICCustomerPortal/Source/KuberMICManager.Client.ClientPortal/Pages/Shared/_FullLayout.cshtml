<!DOCTYPE html>
<html lang="en" data-url-prefix="/">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <title>@ViewBag.Title - Kuber MIC Client Portal</title>
    <meta name="description" content="@ViewBag.Description" />
    <partial name="_Layout.Head" />
</head>
  <body class="h-100">
    <div id="root" class="h-100">
      <!-- Background Start -->
      <div class="fixed-background"></div>
      <!-- Background End -->

      <div class="container-fluid p-0 h-100 position-relative">
        <div class="row g-0 h-100">
            <!-- Left Side Start -->
            <div class="offset-0 col-12 d-none d-lg-flex offset-md-1 col-lg h-lg-100">
            <div class="min-h-100 d-flex align-items-center">
                <div class="w-100 w-lg-75 w-xxl-50">
                    <div>
                        <div class="mb-5">
                            <h1 class="display-3 text-white">Kuber MIC</h1>
                            <h2 class="display-3 text-white">Mortgage Investment Corporation</h2>
                        </div>
                        <p class="h6 text-white lh-1-5 mb-5">
                            Kuber MIC is managed by Square Capital Management inc., a licensed Mortgage Brokerage (Licence #12761) regulated by the Financial Services Regulatory Authority of Ontario and governed by the MBLAA.
                        </p>
                        <div class="mb-5">
                            <a class="btn btn-lg btn-outline-white" href="https://www.kubermic.com/">Learn More</a>
                        </div>
                    </div>
                </div>
            </div>
            </div>
            <!-- Left Side End -->

            <!-- Right Side Start -->
            <div class="sw-lg-70 min-h-100 bg-foreground d-flex justify-content-center align-items-center shadow-deep py-5 full-page-content-right-border">
                <div class="sw-lg-50 px-5">
                    <!-- Logo Start -->
                    <div class="sh-11">
                        <a asp-page="./login">
                            <img class="frontlogo mb-2" src="/img/logo/kuber-logo-black.svg" alt="logo" />
                            <span class="navbar-brand">&nbsp; MIC Client Portal</span>
                        </a>
                    </div>
                    <!-- Logo End -->

                    @RenderSection("RightSide", required: false)
                </div>
            </div>
            <!-- Right Side End -->
        </div>
      </div>
    </div>
    <partial name="_Layout.Scripts"/>
  </body>
</html>
