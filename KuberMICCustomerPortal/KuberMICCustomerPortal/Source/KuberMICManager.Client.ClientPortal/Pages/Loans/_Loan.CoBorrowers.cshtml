                    </div>
                </div>
            </div>
        }
    }
</section>
<!-- Co-Borrowers End -->

<!-- ACH Start -->
<section class="scroll-section loan_borrowers">
    <h2 class="small-title">ACH</h2>
    <div class="row">
        <div class="col-12 col-xl-7">
            <div class="card mb-5">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="mb-5 top-label">
                                <span>INDIVIDUAL ID</span>
                            </label>
                            <input class="form-control" placeholder="@Model.LoanViewModel.Loan.AchIndividualId" disabled/>
                        </div>
                        <div class="col-md-6">
                            <label class="mb-5 top-label">
                                <span>INDIVIDUAL NAME</span>
                            </label>
                            <input class="form-control ql-color-white" placeholder="@Model.LoanViewModel.Loan.AchIndividualName" disabled/>
                        </div>
                        <div class="col-md-2">
                            <label class="mb-5 top-label">
                                <span>STATUS</span>
                            </label>
