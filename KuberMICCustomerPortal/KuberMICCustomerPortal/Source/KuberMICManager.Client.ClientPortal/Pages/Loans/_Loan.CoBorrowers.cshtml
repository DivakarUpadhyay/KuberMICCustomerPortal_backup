@model KuberMICManager.Client.WebUI.Pages.Loans.ViewLoanModel

<!-- Loan Details Start -->
<section class="scroll-section loan_borrowers">
    <h2 class="small-title">Loan Details</h2>
    <div class="row">
        <div class="col-12 col-xl-12">
            <div class="card mb-5">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="mb-5 top-label">
                                <span>LOAN Number</span>
                            </label>
                            <label class="form-control" readonly>@Model.LoanViewModel.Loan.Account</label>
                        </div>
                        <div class="col-md-4">
                            <label class="mb-5 top-label">
                                <span>LOAN STATUS</span>
                            </label>
                            <label class="form-control" readonly>@Model.LoanViewModel.Loan.Categories</label>
                        </div>
                        <div class="col-md-4">
                            <label class="mb-5 top-label">
                                <span>LOAN OFFICER</span>
                            </label>
                            <input class="form-control ql-color-white" placeholder="@Model.LoanViewModel.Loan.LoanOfficer" disabled/>
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="mb-5 top-label">
                                <span>LOAN PURPOSE</span>
                            </label>
                            <input class="form-control" placeholder="@Model.LoanViewModel.Loan.LoanPurpose" disabled/>
                        </div>
                        <div class="col-md-4">
                            <label class="mb-5 top-label">
                                <span>LOAN CATEGORY
                                    @if (IsQualifiedLoan(Model.LoanViewModel.Loan.Documentation))
                                    {
                                        <span class="badge bg-outline-success me-1 mb-1 lh-1-25">Qualified</span>
                                    }
                                    else if (IsIneligibleLoan(Model.LoanViewModel.Loan.Documentation))
                                    {
                                        <span class="badge bg-outline-warning me-1 mb-1 lh-1-25">Ineligible</span>
                                    }
                                </span>
                            </label>
                            <input class="form-control" placeholder="@Model.LoanViewModel.Loan.Documentation" disabled/>
                        </div>
                        <div class="col-md-4">
                            <label class="mb-5 top-label">
                                <span>NOTICES & FORMS</span>
                            </label>
                            <label class="form-check w-100 mb-0">
                                <input type="checkbox" class="form-check-input" checked="@(Model.LoanViewModel.Loan.SendLateNotices == true)" disabled/>
                                <span class="mb-1 lh-1-25">Send Late Notices</span>
                            </label>
                            <label class="form-check w-100 mb-0">
                                <input type="checkbox" class="form-check-input" checked="@(Model.LoanViewModel.Loan.SendPaymentReceipt == true)" disabled/>
                                <span class="mb-1 lh-1-25">Send Payment Receipt</span>
                            </label>
                            <label class="form-check w-100 mb-0">
                                <input type="checkbox" class="form-check-input" checked="@(Model.LoanViewModel.Loan.SendPaymentStatement == true)" disabled/>
                                <span class="mb-1 lh-1-25">Send Payment Statement</span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Loan Details End -->

<!-- Primary Borrower Start -->
<section class="scroll-section loan_borrowers">
    <h2 class="small-title">Primary Borrower</h2>
    <div class="row">
        <div class="col-12 col-xl-7">
            <div class="card mb-5">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="mb-5 top-label">
                                <span>NAME</span>
                            </label>
                            <label class="form-control" readonly>@Model.LoanViewModel.Loan.FullName</label>
                        </div>
                        <div class="col-md-1">
                            <label class="mb-5 top-label">
                                <span>TITLE</span>
                            </label>
                            <label class="form-control" readonly>@Model.LoanViewModel.Loan.Salutation</label>
                        </div>
                        <div class="col-md-3">
                            <label class="mb-5 top-label">
                                <span>FIRST NAME</span>
                            </label>
                            <label class="form-control" readonly>@Model.LoanViewModel.Loan.FirstName</label>
                        </div>
                        <div class="col-md-1">
                            <label class="mb-5 top-label">
                                <span>INITIAL</span>
                            </label>
                            <label class="form-control" readonly>@Model.LoanViewModel.Loan.Mi</label>
                        </div>
                        <div class="col-md-3">
                            <label class="mb-5 top-label">
                                <span>LAST NAME</span>
                            </label>
                            <label class="form-control" readonly>@Model.LoanViewModel.Loan.LastName</label>
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="mb-5 top-label">
                                <span>STREET</span>
                            </label>
                            <label class="form-control" readonly>@Model.LoanViewModel.Loan.Street</label>
                        </div>
                        <div class="col-md-2">
                            <label class="mb-5 top-label">
                                <span>CITY</span>
                            </label>
                            <label class="form-control" readonly>@Model.LoanViewModel.Loan.City</label>
                        </div>
                        <div class="col-md-2">
                            <label class="mb-5 top-label">
                                <span>STATE</span>
                            </label>
                            <label class="form-control" readonly>@Model.LoanViewModel.Loan.State</label>
                        </div>
                        <div class="col-md-2">
                            <label class="mb-5 top-label">
                                <span>POSTAL CODE</span>
                            </label>
                            <label class="form-control" readonly>@Model.LoanViewModel.Loan.ZipCode</label>
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="mb-5 top-label">
                                <span>DELIVERY OPTIONS</span>
                            </label>
                            <label class="mt-2">
                                @if (Model.LoanViewModel.Loan.DeliveryOptions == 1 ||
                                     Model.LoanViewModel.Loan.DeliveryOptions == 3 ||
                                     Model.LoanViewModel.Loan.DeliveryOptions == 5)
                                {
                                    <span class="badge bg-outline-primary me-1">PRINT</span>
                                }  
                                @if(Model.LoanViewModel.Loan.DeliveryOptions == 2 ||
                                    Model.LoanViewModel.Loan.DeliveryOptions == 3 ||
                                    Model.LoanViewModel.Loan.DeliveryOptions == 6) 
                                {
                                    <span class="badge bg-outline-secondary me-1 mb-1 lh-1-25">EMAIL</span>
                                } 
                                @if(Model.LoanViewModel.Loan.DeliveryOptions == 4 ||
                                    Model.LoanViewModel.Loan.DeliveryOptions == 5 ||
                                    Model.LoanViewModel.Loan.DeliveryOptions == 6) 
                                {
                                    <span class="badge bg-outline-tertiary me-1 mb-1 lh-1-25">TEXT</span>
                                } 
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-xl-5">
            <div class="card mb-5">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="mb-5 top-label">
                                <span>EMAIL</span>
                            </label>
                            <label class="form-control" readonly>@Model.LoanViewModel.Loan.EmailAddress</label>
                        </div>
                        <div class="col-md-6">
                            <label class="mb-5 top-label">
                                <span>SIN</span>
                            </label>
                            <label class="form-control" readonly>@Model.LoanViewModel.Loan.Tin</label>
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="mb-5 top-label">
                                <span>CELL</span>
                            </label>
                            <label class="form-control" readonly>@Model.LoanViewModel.Loan.PhoneCell</label>
                        </div>
                        <div class="col-md-6">
                            <label class="mb-5 top-label">
                                <span>HOME</span>
                            </label>
                            <label class="form-control" readonly>@Model.LoanViewModel.Loan.PhoneHome</label>
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="mb-5 top-label">
                                <span>WORK</span>
                            </label>
                            <label class="form-control" readonly>@Model.LoanViewModel.Loan.PhoneWork</label>
                        </div>
                        <div class="col-md-6">
                            <label class="mb-5 top-label">
                                <span>FAX</span>
                            </label>
                            <label class="form-control" readonly>@Model.LoanViewModel.Loan.PhoneFax</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Primary Borrower End -->

